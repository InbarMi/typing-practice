{
  "name": "typing-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "docker:build": "docker build -t typing-app .",
    "docker:run": "docker run -d --restart unless-stopped --name typing-app -p 8080:80 typing-app",
    "docker:start": "npm run docker:build && npm run docker:run",
    "docker:clean": "docker stop typing-app 2>NUL && docker rm typing-app",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "random-words": "^2.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-simple-keyboard": "^3.8.88"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5"
  }
}
